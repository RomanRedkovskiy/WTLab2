<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.authentication.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>registrationServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.authentication.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logoutServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.authentication.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>albumServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.album.AlbumServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>albumCreationServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.album.AlbumCreationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>albumEditServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.album.AlbumEditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>profileServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.user.ProfileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>commentServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.comment.CommentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userListServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.user.UserListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userStatusChangerServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.user.UserStatusChangerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>commentEditServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.comment.EditCommentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>commentDeleteServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.comment.DeleteCommentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>albumListServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.album.AlbumListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>languageServlet</servlet-name>
    <servlet-class>albumForum.web.servlets.locale.LocaleServlet</servlet-class>
  </servlet>
  <filter>
    <filter-name>authenticationFilter</filter-name>
    <filter-class>albumForum.web.filters.AuthenticationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>authorisationFilter</filter-name>
    <filter-class>albumForum.web.filters.AuthorisationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>authenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>authorisationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>languageServlet</servlet-name>
    <url-pattern>/language</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>commentEditServlet</servlet-name>
    <url-pattern>/comment/edit/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>albumListServlet</servlet-name>
    <url-pattern>/albums/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>commentDeleteServlet</servlet-name>
    <url-pattern>/comment/delete/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userListServlet</servlet-name>
    <url-pattern>/user/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userStatusChangerServlet</servlet-name>
    <url-pattern>/user/change-status/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>commentServlet</servlet-name>
    <url-pattern>/comment</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>profileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>albumEditServlet</servlet-name>
    <url-pattern>/album/edit/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>albumCreationServlet</servlet-name>
    <url-pattern>/album/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>albumServlet</servlet-name>
    <url-pattern>/album/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>registrationServlet</servlet-name>
    <url-pattern>/register/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/error/401.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/error/exception.jsp</location>
  </error-page>
</web-app>
